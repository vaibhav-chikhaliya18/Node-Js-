<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <style>
        body {
            background: radial-gradient(circle, rgba(245, 246, 250, 0.7), rgb(152, 152, 152));
            font-family: 'Roboto', Arial, sans-serif;
            color: #333;
            min-height: 100vh;
        }

        .form {
            background: #ffffff;
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            border: 1px solid #ddd;
            height: 290px;
        }

        .dataTbl {
            background: #ffffff;
            border: 1px solid #ddd;
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .table {
            border-collapse: collapse;
        }

        .table th,
        .table td {
            padding: 10px;
            text-align: center;
            border: 1px solid #ddd;
        }

        .btn-primary {
            background: linear-gradient(135deg, #1f6796, #369ee3);
            border: none;
            border-radius: 5px;
            color: white;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #2575A6, #2E86C1);
        }

        .btn-danger {
            background: linear-gradient(135deg, #f0503e, #9c2e21);
            border: none;
            border-radius: 5px;
            color: white;
        }

        .btn-danger:hover {
            background: linear-gradient(135deg, #C0392B, #A93226);
        }

        @media (max-width: 767px) {
            .main {
                flex-direction: column;
            }

            .form,
            .dataTbl {
                width: 100%;
                margin-bottom: 20px;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <h1 class="text-center my-4">CRUD</h1>
        <% if(dynamicBtn){ %>
            <div class="main col-10 mx-auto d-flex">
                <div class="form col-3 p-3 my-3">
                    <h2 class="text-center mb-3">
                        <%= !editUser ? 'Add' : 'Update' %> User
                    </h2>
                    <form action="<%= !editUser ? '/adduser' : '/updateuser' %>" method="post">
                        <% if (editUser) { %>
                            <input type="hidden" name="updateId" value="<%= editUser.id %>">
                            <% } %>
                                <div class="mb-3">
                                    <label>Name</label>
                                    <input type="text" class="form-control" name="username"
                                        value="<%= editUser ? editUser.name : '' %>">
                                </div>
                                <div class="mb-3">
                                    <label>Phone</label>
                                    <input type="number" class="form-control" name="userphone"
                                        value="<%= editUser ? editUser.phone : '' %>">
                                </div>
                                <button type="submit" class="btn btn-primary w-100">
                                    <%= !editUser ? 'Add' : 'Update' %> User
                                </button>
                    </form>
                </div>
                <div class="dataTbl col-9 p-3 position-relative">
                    <a href="/dynamicbtn" class="position-absolute d-none" style="width: 20%;"><button class="btn btn-primary"
                            style="width: 100%;">Add User</button></a>
                    <h2 class="text-center mb-3">View Users</h2>
                    <table class="table">
                        <thead>
                            <tr>
                                <th style="width: 10%;">#</th>
                                <th style="width: 35%;">Name</th>
                                <th style="width: 20%;">Phone</th>
                                <th style="width: 35%;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.map((val, i)=> { %>
                                <% const { id, name, phone }=val %>
                                    <tr>
                                        <td>
                                            <%= ++i %>
                                        </td>
                                        <td class="text-start">
                                            <%= name %>
                                        </td>
                                        <td class="text-start">
                                            <%= phone %>
                                        </td>
                                        <td>
                                            <a href="/edituser?editId=<%= id %>">
                                                <button class="btn btn-primary" style="width: 40%;">Edit</button>
                                            </a>
                                            <a href="/deleteuser?deleteId=<%= id %>">
                                                <button class="btn btn-danger" style="width: 40%;">Delete</button>
                                            </a>
                                        </td>
                                    </tr>
                                    <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        <% }else{ %>
            <div class="main col-10 mx-auto d-flex">
                <div class="form col-3 p-3 my-3 d-none">
                    <h2 class="text-center mb-3">
                        <%= !editUser ? 'Add' : 'Update' %> User
                    </h2>
                    <form action="<%= !editUser ? '/adduser' : '/updateuser' %>" method="post">
                        <% if (editUser) { %>
                            <input type="hidden" name="updateId" value="<%= editUser.id %>">
                            <% } %>
                                <div class="mb-3">
                                    <label>Name</label>
                                    <input type="text" class="form-control" name="username"
                                        value="<%= editUser ? editUser.name : '' %>">
                                </div>
                                <div class="mb-3">
                                    <label>Phone</label>
                                    <input type="number" class="form-control" name="userphone"
                                        value="<%= editUser ? editUser.phone : '' %>">
                                </div>
                                <button type="submit" class="btn btn-primary w-100">
                                    <%= !editUser ? 'Add' : 'Update' %> User
                                </button>
                    </form>
                </div>
                <div class="dataTbl col-12 p-3 position-relative">
                    <a href="/dynamicbtn" style="position: absolute;width: 15%;"><button class="btn btn-primary"
                            style="width: 100%;">Add User</button></a>
                    <h2 class="text-center mb-3">View Users</h2>
                    <table class="table">
                        <thead>
                            <tr>
                                <th style="width: 10%;">No</th>
                                <th style="width: 35%;">Name</th>
                                <th style="width: 20%;">Phone</th>
                                <th style="width: 35%;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.map((val, i)=> { %>
                                <% const { id, name, phone }=val %>
                                    <tr>
                                        <td class="align-middle">
                                            <%= ++i %>
                                        </td>
                                        <td class="text-start align-middle">
                                            <%= name %>
                                        </td>
                                        <td class="text-start align-middle">
                                            <%= phone %>
                                        </td>
                                        <td>
                                            <a href="/edituser?editId=<%= id %>">
                                                <button class="btn btn-primary" style="width: 40%;">Edit</button>
                                            </a>
                                            <a href="/deleteuser?deleteId=<%= id %>">
                                                <button class="btn btn-danger" style="width: 40%;">Delete</button>
                                            </a>
                                        </td>
                                    </tr>
                                    <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        <% } %>
    </div>
</body>

</html>